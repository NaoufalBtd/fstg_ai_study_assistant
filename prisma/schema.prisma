generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  fullName  String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  avatar    String?
  Chat      Chat[]
}

model Module {
  id          Int      @id @default(autoincrement())
  name        String   @unique
  slug        String   @unique
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  teacherIds  Int[]
  // teachers    Teacher[] @relation("teacher_modules", fields: [teacherIds], references: [id])
  Chat        Chat[]   @relation("chat_modules")
}

model Major {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Chat {
  id        Int       @id @default(autoincrement())
  moduleId  Int
  userId    Int
  title     String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  module    Module?   @relation("chat_modules", fields: [moduleId], references: [id])
  user      User?     @relation(fields: [userId], references: [id])
  messages  Message[]
}

model Message {
  id        Int      @id @default(autoincrement())
  chatId    Int
  content   String
  sender    Sender
  isSaved   Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  chat      Chat     @relation(fields: [chatId], references: [id])
}

model Teacher {
  id       Int     @id @default(autoincrement())
  fullName String
  jobTitle String
  avatar   String?
  // modules  Module[] @relation("teacher_modules")
}

enum Sender {
  BOT
  USER
}
